{% extends 'MerciCatalogBundle::layout.html.twig' %}

{% block title %}
    Produto{{ parent() }}
{% endblock %}

{% block content %}
    <div class="row">
        <div class="media col-md-9">
          <h2>{{ product.name }}</h2>
          <div class="pull-left thumbnail">
            <img class="media-object" src="{{ image_path(product.imageName, 3) }}" alt="{{ product.name }}">
          </div>
          <div class="media-body">
            {{ product.description }}
          </div>
          <h2>R$ {{ product.price }}</h2>
            <a href="{{ path('cart_add', {id: product.id}) }}" class="btn btn-success btn-lg">Colocar no Carrinho</a>
        </div>
    </div>
{% endblock %}
